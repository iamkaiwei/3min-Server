source "https://rubygems.org"

ruby "2.0.0"
gem "rails", :github => "rails/rails", :branch => "4-0-stable"

# Database gems
gem "pg"

# Front-end gems
gem "sass-rails"
gem "uglifier"
gem "coffee-rails"
gem "jquery-rails"
gem "turbolinks"
gem "jbuilder"

# Security gems
gem "bcrypt-ruby"
gem "devise"
gem "doorkeeper"

# API gems
gem "rabl"
gem "oj"
gem "rest-client"

# Output arrangement gems
gem "will_paginate"

# Attachment gems
gem "paperclip"

# Amazon AWS gems
gem "aws-sdk"

# Server gems
gem "puma"

# Admin gems
gem "activeadmin", :github => "gregbell/active_admin"

# Documentation gems
group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem "sdoc", :require => false
end

# Development and test gems
group :development, :test do
	gem "pry"
	gem "rspec-rails"
	gem "factory_girl_rails"
	gem "guard-rspec"
end

# Database gems
group :db do
	gem "faker"
end

