source 'https://rubygems.org'

ruby '2.0.0'
gem 'rails', '4.0.0'

# Database gems
gem 'pg'

# Front-end gems
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

# Security gems
gem 'bcrypt-ruby'
gem 'devise'

# API gems
gem 'rabl'
gem 'oj'

# Output arrangement gems
gem 'will_paginate'

# Attachment gems
gem 'paperclip'

# Amazon AWS gems
gem 'aws-sdk'

# Documentation gems
group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Development and test gems
group :development, :test do
	gem 'pry'
end

